build_expat() {
    pushd build

    rm -rf expat-2.6.4
    tar xvf ../sources/expat-2.6.4.tar.xz

    setup_environment

    pushd expat-2.6.4
    ./configure \
        --prefix=/usr \
        --disable-static \
        --docdir=/usr/share/doc/expat-2.6.4
    make
    make DESTDIR=$LFS_SYSROOT install
    make DESTDIR=$LFS_STAGING install
    popd # expat

    post_build

    popd # build
}
