#
# psmisc: staging
# 
build_psmisc() {
    download_source https://sourceforge.net/projects/psmisc/files/psmisc/psmisc-23.7.tar.xz

    pushd build
    rm -rf psmisc-23.7
    tar xvf ../sources/psmisc-23.7.tar.xz
    
    setup_environment

    pushd psmisc-23.7
    ./configure \
        --prefix=/usr
    make
    make DESTDIR=$LFS_STAGING install
    popd # psmisc

    post_build

    popd # build
}
