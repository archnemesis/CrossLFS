build_less() {
    download_source https://www.greenwoodsoftware.com/less/less-679.tar.gz

    pushd build

    rm -rf less-679
    tar xvf ../sources/less-679.tar.gz
    
    setup_environment

    pushd less-679
    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc
    make
    make DESTDIR=$LFS_STAGING install
    popd # less

    post_build

    popd # build
}
