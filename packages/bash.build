build_bash() {
    pushd build

    rm -rf bash-5.2.37
    tar xvf ../sources/bash-5.2.37.tar.gz

    setup_environment

    pushd bash-5.2.37
    ./configure \
        --prefix=/usr \
        --without-bash-malloc \
        --with-installed-readline \
        --docdir=/usr/share/doc/bash-5.2.37
    make
    make DESTDIR=$LFS_STAGING install

    popd # bash-5.2.37

    post_build

    popd # build
}
