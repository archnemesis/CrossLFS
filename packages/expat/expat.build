build_expat() {
    download_source https://github.com/libexpat/libexpat/releases/download/R_2_7_1/expat-2.7.1.tar.xz

    pushd build

    rm -rf expat-2.7.1
    tar xvf ../sources/expat-2.7.1.tar.xz

    setup_environment

    pushd expat-2.7.1
    ./configure \
        --prefix=/usr \
        --disable-static \
        --docdir=/usr/share/doc/expat-2.7.1
    make
    make DESTDIR=$LFS_SYSROOT install
    make DESTDIR=$LFS_STAGING install
    popd # expat

    post_build

    popd # build
}
