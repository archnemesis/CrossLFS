build_python_flit_core() {
    download_source https://pypi.org/packages/source/f/flit-core/flit_core-3.11.0.tar.gz
    
    pushd build

    rm -rf flit_core-3.11.0
    tar xvf ../sources/flit_core-3.11.0.tar.gz
    
    setup_environment

    pushd flit_core-3.11.0
    python -m flit_core.wheel
    python bootstrap_install.py --installdir $LFS_STAGING/usr/lib/python-3.13/site-packages dist/flit_core-*.whl
    popd # flit_core

    post_build

    popd # build
}
